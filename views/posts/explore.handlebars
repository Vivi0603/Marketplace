<section class="vh-100">
  <div class="product-filter">
    <div class="container m-5">
      <h2>Search Here:</h2>
      <div class="float-container">
        <div class="float-child">
          <div>
            <label for="searchInput"></label>
            <input style=" display:inline-block; width:100%" type="text" class="form-control" id="searchInput"
              onkeyup="fName('searchInput','name')" placeholder="Search Category or Product name">
          </div>
          
          </div>
        </div>
      </div>
    </div>
    
  
  <div class="container m-5">
    <h2>List of Products:</h2>
    <table class="table table-hover">
      {{!-- <thead class="thead-light"> --}}
        <tr>
          <th scope="col" style="font-size:26px;">Product Image</th>
          <th scope="col" style="font-size:26px;">Product Name</th>
          <th scope="col" style="font-size:26px;">Category</th>
          <th scope="col" style="font-size:26px;">Price</th>
          {{!-- <th scope="col">Product Price</th> --}}
        </tr>
        {{#each productList}}
        <tbody>
          
          <tr class="clickable-row" id="{{this._id}}" data-href="productdetails/{{this._id}}">
              <td style="width:30%"><img src={{this.image}} width="100" height="100"/></td>
            <td style="width:40%">
              <a href="productdetails/{{this._id}}"> {{this.productName}}</a>
            </td>
            <td style="width:20%">
              {{this.category}}
            </td>
            <td style="width:20%">
              {{this.price}}
            </td>
          </tr>
          
        </tbody>
        {{/each}}
    </table>
</div>
<div class="container m-5" id="no-result" hidden="">
  <p><span class="fa fa-exclamation-circle">&#0160;</span>No results found</p>
</div>
</section>